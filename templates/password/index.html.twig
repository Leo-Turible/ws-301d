{% extends 'base.html.twig' %}

{% block title %}Hello PasswordController!{% endblock %}

{% block body %}
<main>
    <div class="card">
        <h1>Mot de passe oublié</h1>

        {% set successMessages = app.flashes('success') %}
        {% if successMessages is not empty %}
            <div class="alert alert-success">
                {{ successMessages[0] }}
            </div>
        {% endif %}

        {% set errorMessages = app.flashes('error') %}
        {% if errorMessages is not empty %}
            <div class="alert alert-danger">
                {{ errorMessages[0] }}
            </div>
        {% endif %}


        <form action="{{ path('app_password') }}" method="post">
            <label for="inputEmail">Email (étudiant)</label>
            <input type="email" id="inputEmail" name="_email" placeholder="patricegommery@etudiant.univ-reims.fr" required autofocus>

            <button type="submit">Envoyer</button>
        </form>
        <a href="{{ path('app_connexion') }}">Retour</a>
    </div>
</main>
{% endblock %}