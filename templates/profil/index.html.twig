{# templates/profil/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<main>
		<div class="card profil">
			<h1>Profil</h1>
			<svg xmlns="http://www.w3.org/2000/svg" height="5.5em" viewbox="0 0 496 512" style="fill:#1f2c33">
				<path d="M248 104c-53 0-96 43-96 96s43 96 96 96 96-43 96-96-43-96-96-96zm0 144c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm0-240C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm0 448c-49.7 0-95.1-18.3-130.1-48.4 14.9-23 40.4-38.6 69.6-39.5 20.8 6.4 40.6 9.6 60.5 9.6s39.7-3.1 60.5-9.6c29.2 1 54.7 16.5 69.6 39.5-35 30.1-80.4 48.4-130.1 48.4zm162.7-84.1c-24.4-31.4-62.1-51.9-105.1-51.9-10.2 0-26 9.6-57.6 9.6-31.5 0-47.4-9.6-57.6-9.6-42.9 0-80.6 20.5-105.1 51.9C61.9 339.2 48 299.2 48 256c0-110.3 89.7-200 200-200s200 89.7 200 200c0 43.2-13.9 83.2-37.3 115.9z" style="stroke-width: 20; stroke: #1f2c33;"/>
			</svg>


			<div id="profil">

				{% if user %}
					{% if user.firstName is defined %}
						<p class="profil__infos">
							<strong>Prénom :</strong>
							{{ user.firstName }}</p>
					{% endif %}
					{% if user.lastName is defined %}
						<p class="profil__infos">
							<strong>Nom :</strong>
							{{ user.lastName }}</p>
					{% endif %}
					{% if user.tp is defined %}
						<p class="profil__infos">
							<strong>TP :</strong>
							{{ user.tp }}</p>
					{% endif %}
					{% if user.year is defined %}
						<p class="profil__infos">
							<strong>Année :</strong>
							{{ user.year }}</p>
					{% endif %}
					{% if user.email is defined %}
						<p class="profil__infos">
							<strong>Email :</strong>
							{{ user.email }}</p>
					{% endif %}
				</div>
				<a class="btn" href="{{ path('app_logout') }}">Déconnexion</a>
			{% else %}
				<p>Profil non disponible.</p>
			{% endif %}

		</div>
	</main>
{% endblock %}
