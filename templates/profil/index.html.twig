{# templates/profil/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<main>
    <div class="card">
        <h1>Profil</h1>
        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><path d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z" style="width="450px""/></svg>

         
            {% if user %}
                {% if user.firstName is defined %}
                    <p class="profil__infos"><strong>Prénom :</strong> {{ user.firstName }}</p>
                {% endif %}
                {% if user.lastName is defined %}
                    <p class="profil__infos"><strong>Nom :</strong> {{ user.lastName }}</p>
                {% endif %}
                {% if user.email is defined %}
                    <p class="profil__infos"><strong>Email :</strong> {{ user.email }}</p>
                {% endif %}
                {% if user.tp is defined %}
                    <p class="profil__infos"><strong>TP :</strong> {{ user.tp }}</p>
                {% endif %}
                {% if user.year is defined %}
                    <p class="profil__infos"><strong>Année :</strong> {{ user.year }}</p>
                {% endif %}
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <p>Profil non disponible.</p>
            {% endif %}
    </div>
</main>
{% endblock %}
